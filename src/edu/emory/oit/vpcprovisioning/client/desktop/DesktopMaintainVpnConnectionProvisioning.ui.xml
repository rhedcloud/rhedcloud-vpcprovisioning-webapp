<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:Label ui:field="headerLabel" addStyleNames="{style.mediumLabel}">Provision a new VPN Connection</g:Label>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Address:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcTB" debugId="vpcTB" enabled="false"/>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:Grid addStyleNames="{style.statusPanel}" cellSpacing="12">
				<g:row>
					<g:customCell>
						<g:CheckBox ui:field="editCB" 
							title="Edit the derived values that were pulled directly from AWS based on the profile you selected (future feature).">Edit the derived values (future feature)</g:CheckBox>
					</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="vpcLB" debugId="vpcLB" />
			    	</g:customCell>
				</g:row>
				<!-- 
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Remote VPN Connection ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="remoteVpnConnectionIdTB" debugId="remoteVpnConnectionIdTB" />
			    	</g:customCell>
				</g:row>
				 -->
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:ScrollPanel width="96%">
				<g:VerticalPanel spacing="8" ui:field="tunnelsVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Tunnel Profiles:</g:Label>
					<c:CellTable width="100%" ui:field="tunnelProfileTable"  title="Existing Tunnels"/>
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:cell>
		<!-- 
		<!ELEMENT VpnConnectionRequisition (VpnConnectionProfile, OwnerId, RemoteVpnConnectionInfo+)>
		<!ELEMENT RemoteVpnConnectionInfo (RemoteVpnConnectionId, RemoteVpnTunnel+)>
		<!ELEMENT RemoteVpnTunnel (LocalTunnelId, RemoteVpnIpAddress, PresharedKey, VpnInsideIpCidr)>
		 -->
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:ScrollPanel width="96%">
				<g:VerticalPanel spacing="8" ui:field="remoteVpnConnectionInfoVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Remote VPN Connections:</g:Label>
					<g:Label addStyleNames="{style.labelLeft}">NOTE:  Remote VPN Connection ID and VPN 
					Inside IP CIDR are not currently used so the data for those fields doesn't matter.</g:Label>
					<c:CellTable width="100%" ui:field="remoteVpnConnectionTable"  title="Remote VPN Tunnels"/>
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 