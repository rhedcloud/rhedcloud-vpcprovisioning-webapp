<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:ScrollPanel width="99%" height="99%">
	<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel spacing="8">
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Image url="images/ajax-loader.gif"/>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:Label addStyleNames="{style.mediumLabel}">Account Maintenance</g:Label>
		</g:cell>
		<g:HorizontalPanel>
			<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
				<g:VerticalPanel width="100%" spacing="8">
				
					<!-- General Account Info -->
					<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8" width="100%">
					<g:Grid cellSpacing="8">
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.mediumLabel}">General Account Info:</g:Label>
					    	</g:customCell>
						</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.label}">Account ID:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="accountIdTB" debugId="accountIdTB" />
					    	</g:customCell>
				    	</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.label}">Account Name:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="accountNameTB" debugId="accountNameTB" />
					    	</g:customCell>
				    	</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.label}">Alternate Name:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="alternateNameTB" debugId="alternateNameTB" />
					    	</g:customCell>
				    	</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.label}">Account Owner:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:SuggestBox ui:field="ownerIdSB" debugId="ownerIdSB" 
									addStyleNames="{style.field} {style.glowing-border}"/>
					    	</g:customCell>
				    	</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.label}">Compliance Class:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="complianceClassLB" debugId="complianceClassLB" />
					    	</g:customCell>
						</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label addStyleNames="{style.label}">Password Location:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="passwordLocationTB" debugId="passwordLocationTB" />
					    	</g:customCell>
				    	</g:row>
						<g:row>
					    	<g:customCell>
								<g:Label ui:field="speedTypeLabel" addStyleNames="{style.label}">10-Digit SpeedType:</g:Label>
					    	</g:customCell>
					    	<g:customCell>
								<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="speedTypeTB" debugId="speedTypeTB" />
					    	</g:customCell>
					    	<g:customCell>
								<g:HTML ui:field="speedTypeHTML">SpeedType HTML</g:HTML>
					    	</g:customCell>
				    	</g:row>
					</g:Grid>
					</g:VerticalPanel>
					
					<!--  Account Emails -->
					<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8" ui:field="emailsVP" height="100%" width="100%">
						<g:Label addStyleNames="{style.mediumLabel}">Add/remove email(s):</g:Label>
						<g:HorizontalPanel ui:field="addEmailHP" spacing="16">
							<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="addEmailTF" debugId="addEmailTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
							</g:cell>
							<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
								<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
									ui:field="addEmailTypeLB" debugId="addEmailTypeLB" />
							</g:cell>
							<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
								<g:Button ui:field="addEmailButton" debugId="addEmailButton"
									addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
							</g:cell>
						</g:HorizontalPanel>
						<g:VerticalPanel spacing="8">
							<g:Label addStyleNames="{style.mediumLabel}">e-mail addresses associated to this account:</g:Label>
							<g:FlexTable ui:field="emailTable" debugId="emailTable" cellSpacing="3" cellPadding="3"/>
						</g:VerticalPanel>
					</g:VerticalPanel>
					
					<!-- Account Properties -->
					<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8" ui:field="propertiesVP" height="100%" width="100%">
						<g:Label addStyleNames="{style.mediumLabel}">Add/Update/Remove Properties:</g:Label>
						<g:HorizontalPanel ui:field="addPropertyHP" spacing="16">
							<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="propertyKeyTF" debugId="propertyKeyTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
							</g:cell>
							<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="propertyValueTF" debugId="propertyValueTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
							</g:cell>
							<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
								<g:Button ui:field="addPropertyButton" debugId="addPropertyButton"
									addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
							</g:cell>
						</g:HorizontalPanel>
						<g:VerticalPanel spacing="8">
							<g:Label addStyleNames="{style.mediumLabel}">Properties associated to this account:</g:Label>
							<g:FlexTable ui:field="propertiesTable" debugId="propertiesTable" cellSpacing="3" cellPadding="3"/>
						</g:VerticalPanel>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:cell>			
			
			<!-- Users/Role -->
			<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
				<g:VerticalPanel spacing="8">
				<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8" ui:field="adminVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Add/remove Users/Roles:</g:Label>
					<g:HorizontalPanel ui:field="addNetIdHP" spacing="16">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:SuggestBox ui:field="directoryLookupSB" debugId="directoryLookupSB" addStyleNames="{style.field} {style.glowing-border}"/>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Button ui:field="addAdminButton" debugId="addAdminButton"
								addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
						</g:cell>
					</g:HorizontalPanel>
					<g:VerticalPanel spacing="8">
						<g:Label ui:field="adminLabel" addStyleNames="{style.mediumLabel}">Users/Roles associated to this AWS Account:</g:Label>
						<g:FlexTable ui:field="adminTable" cellSpacing="3" cellPadding="3"/>
					</g:VerticalPanel>
				</g:VerticalPanel>
				</g:VerticalPanel>
			</g:cell>			
		</g:HorizontalPanel>
		
		<!-- Save/Cancel Buttons -->
		<g:Grid cellSpacing="8" cellPadding="8">
			<g:row>
		    	<g:customCell>
					<g:Grid cellSpacing="12">
						<g:row>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
									ui:field="okayButton" debugId="okayButton">Save</g:Button>
					    	</g:customCell>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
									ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
					    	</g:customCell>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.actionButton}"
									ui:field="billSummaryButton" debugId="billSummaryButton">View Bills</g:Button>
					    	</g:customCell>
						</g:row>
					</g:Grid>
		    	</g:customCell>
		    </g:row>
		</g:Grid>
		
		<!-- Account Notifications -->
		<g:HorizontalPanel>
			<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
				<g:VerticalPanel spacing="8">
				<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8">
					<g:HTML ui:field="accountNotificationsHeader" addStyleNames="{style.mediumLabel}">Account Notifications</g:HTML>
					<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
						<g:Grid cellSpacing="12">
							<g:row>
						    	<g:customCell>
									<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
										ui:field="filterTB" debugId="filterTB" title="Enter a search string that you'd like to filter the list by."/>
						    	</g:customCell>
								<g:customCell>
									<g:ListBox addStyleNames="{style.listBoxField} {style.glowing-border}"
										ui:field="filterTypesLB" debugId="filterTypesLB" />
								</g:customCell>
								<g:customCell>
									<g:Button ui:field="filterButton" debugId="filterButton" text="Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter by account id"/>
								</g:customCell>
								<g:customCell>
									<g:Button ui:field="clearFilterButton" debugId="clearFilterButton" text="Clear Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter by account id"/>
								</g:customCell>
								<g:customCell>
									<g:PushButton ui:field="refreshButton" debugId="refreshButton" text="Refresh" 
										addStyleNames="{style.refreshButton}"
										title="Refresh table content"/>
								</g:customCell>
								<g:customCell>
									<g:HTML ui:field="filteredHTML" visible="false" addStyleNames="{style.body}"><i>* Filtered</i></g:HTML>
								</g:customCell>
								<!-- 
								<g:customCell>
									<g:Button ui:field="actionsButton" debugId="actionsButton" text="Actions" addStyleNames="{style.glowing-border} {style.normalButton}" title="Actions you can perform on a selected item"/>
								</g:customCell>
								 -->
							</g:row>
						</g:Grid>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
						<g:VerticalPanel ui:field="notificationListPanel" width="100%">
							<g:Grid>
								<g:row>
									<g:customCell>
										<c:CellTable width="100%" ui:field="listTable" debugId="listTable" title="Existing Account Notifications"/>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<c:SimplePager ui:field="listPager" debugId="listPager"/>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
					</g:cell>
				</g:VerticalPanel>
				</g:VerticalPanel>
		</g:cell>
		</g:HorizontalPanel>

	</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder>