<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	
	<ui:style field="otherStyles">
	
	</ui:style>
	<g:ScrollPanel width="99%" height="99%">
		<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel spacing="8">
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Image url="images/ajax-loader.gif"/>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:Label addStyleNames="{style.mediumLabel}">VPC Maintenance</g:Label>
		</g:cell>
		<g:HorizontalPanel spacing="12">
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_TOP">
	
				<!-- Hide this one when generating, use when registering/maintaining -->
				<g:Grid addStyleNames="{style.statusPanel}" ui:field="maintainVpcGrid" cellSpacing="8">
					<g:row>
				    	<g:customCell>
							<g:Label addStyleNames="{style.mediumLabel}">General Info:</g:Label>
				    	</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Account ID:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="accountIdTB" debugId="accountIdTB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Account Name:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="accountNameTB" debugId="accountNameTB" enabled="false"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">VPC ID:</g:Label>
						</g:customCell>
						<g:customCell>
							<!-- <g:TextBox enabled="false" addStyleNames="{style.field} {style.glowing-border}" -->
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcIdTB" debugId="vpcIdTB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">VPC Region:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:ListBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="regionLB" debugId="regionLB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">VPC Type:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:ListBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcTypeLB" debugId="vpcTypeLB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">CIDR:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="cidrTB" debugId="cidrTB" title="In the form 'ip address/bits'"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">VPN Profile ID:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpnProfileIdTB" debugId="vpnProfileIdTB" title="VPN Profile ID"/>
						</g:customCell>
					</g:row>
					<g:row>
				    	<g:customCell>
							<g:Label addStyleNames="{style.label}">Purpose:</g:Label>
				    	</g:customCell>
				    	<g:customCell>
							<g:TextArea addStyleNames="{style.field} {style.glowing-border}"
								ui:field="purposeTA" debugId="purposeTA" 
								title="The purpose of this VPC."/>
				    	</g:customCell>
			    	</g:row>
				</g:Grid>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_TOP">

				<g:VerticalPanel addStyleNames="{style.statusPanel}" ui:field="vpnInfoOuterPanel">
					<g:cell horizontalAlignment="ALIGN_LEFT"
						verticalAlignment="ALIGN_TOP">
						<g:Grid ui:field="vpnInfoHeaderGrid" cellSpacing="8">
							<g:row>
						    	<g:customCell>
									<g:Label addStyleNames="{style.mediumLabel}">VPN Information for this VPC</g:Label>
						    	</g:customCell>
								<g:customCell>
									<g:PushButton ui:field="expandButton" debugId="expandButton" text="++" 
										addStyleNames="{style.refreshButton}"
										title="Expand VPN Connection info"/>
								</g:customCell>
								<g:customCell>
									<g:PushButton ui:field="collapseButton" debugId="collapseButton" text="--" 
										addStyleNames="{style.refreshButton}"
										title="Collapse VPN Connection info"/>
								</g:customCell>
								<g:customCell>
									<g:PushButton ui:field="refreshButton" debugId="refreshButton" text="Refresh" 
										addStyleNames="{style.refreshButton}"
										title="Refresh VPN Connection info"/>
								</g:customCell>
							</g:row>
						</g:Grid>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_LEFT"
						verticalAlignment="ALIGN_TOP">
						<g:Grid ui:field="operationalStatusGrid" cellSpacing="8">
							<g:row>
						    	<g:customCell>
									<g:Label addStyleNames="{style.label}">Tunnel 1 Status:</g:Label>
						    	</g:customCell>
						    	<g:customCell>
    								<g:Image ui:field="tunnel1StatusImage" width="16px" height="16px"/>						    		
						    	</g:customCell>
						    </g:row>
							<g:row>
						    	<g:customCell>
									<g:Label addStyleNames="{style.label}">Tunnel 2 Status:</g:Label>
						    	</g:customCell>
						    	<g:customCell>
    								<g:Image ui:field="tunnel2StatusImage" width="16px" height="16px"/>						    		
						    	</g:customCell>
						    </g:row>
							<g:row>
						    	<g:customCell>
									<g:Label addStyleNames="{style.label}">Operational Summary:</g:Label>
						    	</g:customCell>
						    	<g:customCell>
									<g:TextArea addStyleNames="{style.field} {style.glowing-border}"
										ui:field="operationalSummaryTA" debugId="operationalSummaryTA" 
										title="Operational Summary for this VPN." enabled="false"/>
						    	</g:customCell>
						    </g:row>
						</g:Grid>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_LEFT"
						verticalAlignment="ALIGN_TOP">
						<g:Grid ui:field="vpnInfoGrid" cellSpacing="8">
							<g:row>
						    	<g:customCell>
									<g:Label addStyleNames="{style.labelLeft}">VPN 1 Details:</g:Label>
						    	</g:customCell>
						    </g:row>
							<g:row>
						    	<g:customCell>
						   			<g:DecoratorPanel>
						   				<g:ScrollPanel ui:field="vpnInfoPanel">
						   					<g:HTML><b>Refreshing...</b></g:HTML>
						   				</g:ScrollPanel>
						   			</g:DecoratorPanel>
								</g:customCell>
							</g:row>
						</g:Grid>				   		
			   		</g:cell>
				</g:VerticalPanel>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_TOP">
				<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8" ui:field="propertiesVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Add/Update/Remove Properties:</g:Label>
					<g:HorizontalPanel ui:field="addPropertyHP" spacing="16">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:TextBox ui:field="propertyKeyTF" debugId="propertyKeyTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:TextBox ui:field="propertyValueTF" debugId="propertyValueTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Button ui:field="addPropertyButton" debugId="addPropertyButton"
								addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
						</g:cell>
					</g:HorizontalPanel>
					<g:VerticalPanel spacing="8">
						<g:Label addStyleNames="{style.mediumLabel}">Properties associated to this VPC:</g:Label>
						<g:FlexTable ui:field="propertiesTable" debugId="propertiesTable" cellSpacing="3" cellPadding="3"/>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:cell>
			<!-- hide this one when maintaining (not used anymore) -->
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_MIDDLE">
				<g:Grid ui:field="generateVpcGrid" cellSpacing="8">
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Account ID:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcReqAccountIdTB" debugId="vpcReqAccountIdTB" />
						</g:customCell>
					</g:row>
	
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Owner NetId:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcReqOwnerNetIdTB" debugId="vpcReqOwnerNetIdTB" />
						</g:customCell>
					</g:row>
	
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">10-Digit SpeedType:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcReqSpeedTypeTB" debugId="vpcReqSpeedTypeTB" />
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="speedTypeLabel"
								addStyleNames="{style.label}">SpeedType status</g:Label>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">VPC Region:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:ListBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="reqRegionLB" debugId="reqRegionLB" />
						</g:customCell>
					</g:row>
					
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">VPC Type:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:ListBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcReqTypeLB" debugId="vpcReqTypeLB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">CIDR:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="vpcReqCidrTB" debugId="vpcReqCidrTB" title="In the form 'ip address/bits'"/>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:cell>
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT"
			verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
					<g:customCell>
						<g:Button
							addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
					</g:customCell>
					<g:customCell>
						<g:Button
							addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT"
			verticalAlignment="ALIGN_MIDDLE" width="100%">
				<g:TabLayoutPanel barHeight="2" barUnit="EM"
					width="100%" height="600px" animationDuration="500"
					animationVertical="false" ui:field="vpcTabPanel"
					debugId="vpcTabPanel" addStyleNames="gwt-TabLayoutPanel">
					<!-- debugId="vpcTabPanel" addStyleNames="gwt-TabLayoutPanel {style.statusPanel}"> -->

					<g:tab>
						<g:header>Firewall Rules</g:header>
						<g:DeckLayoutPanel ui:field="firewallContainer"
							debugId="firewallContainer" width="100%" height="100%" />
					</g:tab>
					<g:tab>
						<g:header>Elastic IP Assignments</g:header>
						<g:DeckLayoutPanel
							ui:field="elasticIpAssignmentContainer"
							debugId="elasticIpAssignmentContainer" width="100%" height="100%" />
					</g:tab>
				</g:TabLayoutPanel>
		</g:cell>
		</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 