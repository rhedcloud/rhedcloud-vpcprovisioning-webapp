<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:Label ui:field="headerLabel" addStyleNames="{style.mediumLabel}">Provision a new Custom Role</g:Label>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Account Id:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="accountIdTB" debugId="accountIdTB" enabled="false"/>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Account Name:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="accountNameTB" debugId="accountNameTB" enabled="false"/>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:Grid addStyleNames="{style.statusPanel}" cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Custom Role Name:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="roleNameTB" debugId="roleNameTB"/>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 