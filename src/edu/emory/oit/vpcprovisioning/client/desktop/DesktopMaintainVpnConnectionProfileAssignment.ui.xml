<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:HTML ui:field="notificationsHeader" addStyleNames="{style.mediumLabel}">VPN Connection Profile Assignment Details</g:HTML>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Assignment ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="assignmentIdTB" debugId="assignmentIdTB" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Connection Profile ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="connectionProfileIdTB" debugId="connectionProfileIdTB" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Owner ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="ownerIdTB" debugId="ownerIdTB" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Description:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="descriptionTA" debugId="descriptionTA" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Purpose:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="purposeTB" debugId="purposeTB" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Delete User:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="deleteUserTB" debugId="deleteUserTB" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Delete Time:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="deleteTimeTB" debugId="deleteTimeTB" />
			    	</g:customCell>
		    	</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="createInfoLabel" debugId="createInfoLabel" addStyleNames="{style.longField}"/>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="updateInfoLabel" debugId="updateInfoLabel" addStyleNames="{style.longField}"/>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Okay</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 