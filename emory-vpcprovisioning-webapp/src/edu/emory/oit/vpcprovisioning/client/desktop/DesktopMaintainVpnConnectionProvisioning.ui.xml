<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:Label addStyleNames="{style.mediumLabel}">Provision a new VPN Connection</g:Label>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="12" visible="false">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Address:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcTB" debugId="vpcTB" enabled="false"/>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:ScrollPanel width="96%" visible="false">
				<g:VerticalPanel spacing="8" ui:field="tunnelsVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Tunnel Profiles:</g:Label>
					<c:CellTable width="100%" ui:field="tunnelProfileTable"  title="Existing Tunnels"/>
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:cell>
		<!-- <!ELEMENT VpnConnectionRequisition (VpnConnectionProfile, OwnerId, RemoteVpnIpAddress, PresharedKey)> -->
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			<g:Grid addStyleNames="{style.statusPanel}" cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<!-- <g:SuggestBox ui:field="ownerLookupSB" debugId="ownerLookupSB" addStyleNames="{style.field} {style.glowing-border}"/> -->
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="ownerIdTB" debugId="ownerIdTB" title="ID of the VPC you want to assign this profile to."/>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Remote VPN IP Address:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="remoteVpnIpAddressTB" debugId="remoteVpnIpAddressTB"/>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Pre-shared Key:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="presharedKeyTA" debugId="presharedKeyTA"/>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 