<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<!-- TODO: figure out why the horizontal scroll bar doesn't show.  
		it's there, just not showing up.  it's barely showing at the 
		bottom and for some reason the same approach used for other 
		list views is not working with this one.
		Very strange... -->
	<g:ScrollPanel debugId="servicesScrollPanel" width="100%" height="96%">	
	<g:VerticalPanel width="100%" spacing="20">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel spacing="8">
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Image url="images/ajax-loader.gif"/>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:HTML addStyleNames="{style.mediumLabel}">Service List</g:HTML>
		<g:HTML addStyleNames="{style.body}">Below is a list of existing 
		Emory AWS Services that you can view or edit.<br/><br/>
		These reside in the database associated to the Emory AWS ESB Service.  
		The Emory AWS Service is authoritatative for 
		AWS Service objects and allows applications like this one 
		to query, create, update and delete those objects.<br/><br/>
		Click the 'Add Service' button to go to the Service maintenance 
		page where you can create a new Emory AWS Service.</g:HTML>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="8">
				<g:row>
					<g:customCell>
						<g:Button ui:field="createServiceButton" debugId="createServiceButton" text="Add Service" addStyleNames="{style.glowing-border} {style.actionButton}" title="Create Emory AWS Service"/>
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="actionsButton" debugId="actionsButton" text="Actions" addStyleNames="{style.glowing-border} {style.normalButton}" title="Actions you can perform on a selected item"/>
					</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="filterTB" debugId="filterTB"/>
			    	</g:customCell>
					<g:customCell>
						<g:CaptionPanel addStyleNames="{style.light-captionpanel}" captionHTML="Select a Filter Type">
						<g:VerticalPanel>
							<g:RadioButton ui:field="consoleCategoriesRB" text="Console Category" name="filterType" title="ONE Emory Console Category"/>
							<g:RadioButton ui:field="awsServiceNameRB" text="AWS Service Name" name="filterType" title="The AWS Service name"/>
							<g:RadioButton ui:field="awsStatusRB" text="AWS Service Status" name="filterType" title="The AWS Service status (active/deprecated)"/>
							<g:RadioButton ui:field="siteStatusRB" text="Emory Service Status" name="filterType" title="The Emory Service status (available, blocked etc.)"/>
						</g:VerticalPanel>
						</g:CaptionPanel>
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="filterButton" debugId="filterButton" text="Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter by account id"/>
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="clearFilterButton" debugId="clearFilterButton" text="Clear Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter by account id"/>
					</g:customCell>
					<g:customCell>
						<g:PushButton ui:field="refreshButton" debugId="refreshButton" text="Refresh" 
							addStyleNames="{style.refreshButton}"
							title="Refresh table content"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:VerticalPanel ui:field="serviceListPanel" width="100%">
			<g:Grid>
				<g:row>
					<g:customCell>
						<c:CellTable width="100%" ui:field="serviceListTable" debugId="serviceListTable" title="Existing Services"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<c:SimplePager ui:field="serviceListPager" debugId="serviceListPager" location="CENTER"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
	</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 