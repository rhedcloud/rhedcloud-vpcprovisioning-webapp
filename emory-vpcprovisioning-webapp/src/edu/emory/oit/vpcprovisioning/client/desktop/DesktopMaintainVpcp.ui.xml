<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:HorizontalPanel spacing="8">
					<g:Image url="images/ajax-loader.gif"/>
				</g:HorizontalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel width="100%">
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			
			<!-- Hide this one when generating -->
			<g:Grid ui:field="maintainVpcpGrid" cellSpacing="8" visible="false">
			<!-- NEEDS these (when maintaining):
				<!ELEMENT VirtualPrivateCloudProvisioning (
					ProvisioningId, 
					VirtualPrivateCloudRequisition, 
					Status, 
					ProvisioningResult?, 
					ActualTime?, 
					AnticipatedTime?, 
					ProvisioningStep*, 
					CreateUser, 
					CreateDatetime, 
					LastUpdateUser?, 
					LastUpdateDatetime?)>
			 -->
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Provisioning ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="provisioningIdTB" debugId="provisioningIdTB" />
			    	</g:customCell>
				</g:row>
			    	<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Status:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="statusTB" debugId="statusTB" />
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Requisition Type:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.listBoxField} {style.glowing-border}"
							ui:field="vpcTypeLB"  debugId="vpcTypeLB" />
			    	</g:customCell>
				</g:row>
				<!-- TODO create/update user/time read only -->
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<!-- hide this one when maintaining -->
			<g:VerticalPanel ui:field="generateVpcpPanel">
			<!-- NEEDS these (when generating):
			<!ELEMENT VirtualPrivateCloudRequisition (
				AccountId?, TicketId?, AuthenticatedRequestorNetId, 
				AccountOwnerNetId, FinancialAccountNumber, 
				CustomerAdminNetId+, Type, ComplianceClass, 
				SensitiveDataType*, Purpose, NotifyAdmins)>
			 -->
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Select Account:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.listBoxField} {style.glowing-border}"
							ui:field="accountLB" debugId="accountLB" />
			    	</g:customCell>
			    	<g:customCell>
			    		<g:CaptionPanel ui:field="accountCP" debugId="accountCP" captionHTML="Account Info">
			    		</g:CaptionPanel>
			    	</g:customCell>
			    </g:row>
			</g:Grid>
			<g:Grid cellSpacing="12">
			    <g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Account Owner NetId:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcpReqOwnerNetIdTB" debugId="vpcpReqOwnerNetIdTB" />
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Ticket ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcpReqTicketIdTB" debugId="vpcpReqTicketIdTB" />
			    	</g:customCell>
			    	</g:row>
			    	<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Requestor NetId:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcpReqRequestorNetIdTB" debugId="vpcpReqRequestorNetIdTB" />
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">10-Digit SpeedType:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcpReqSpeedTypeTB" debugId="vpcpReqSpeedTypeTB" />
			    	</g:customCell>
			    	<g:customCell>
					<g:HTML ui:field="speedTypeHTML">SpeedType HTML</g:HTML>
			    	</g:customCell>
			    	</g:row>
			    	<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Type:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.listBoxField} {style.glowing-border}"
							ui:field="vpcpReqTypeLB" debugId="vpcpReqTypeLB" />
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Compliance Class:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.listBoxField} {style.glowing-border}"
							ui:field="vpcpReqComplianceClassLB" debugId="vpcpReqComplianceClassLB" />
			    	</g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:HTML></g:HTML></g:customCell>
			    	<g:customCell>
			    		<g:CaptionPanel ui:field="sensitiveDataCP" debugId="sensitiveDataCP" captionHTML="Sensitive Data">
			    			<g:VerticalPanel spacing="8">
								<g:Label addStyleNames="{style.label-left}">Please select all sensitive data regimes that might be used by this VPC:</g:Label>
								<g:Grid cellSpacing="12">
								    <g:row>
								    	<g:customCell>
											<g:Label addStyleNames="{style.label}">FISMA:</g:Label>
								    	</g:customCell>
								    	<g:customCell>
								    		<g:CheckBox ui:field="fismaCB" debugId="fismaCB" title="Will use FISMA"/>
								    	</g:customCell>
								    </g:row>
								    <g:row>
								    	<g:customCell>
											<g:Label addStyleNames="{style.label}">PCI:</g:Label>
								    	</g:customCell>
								    	<g:customCell>
								    		<g:CheckBox ui:field="pciCB" debugId="pciCB" title="Will use PCI"/>
								    	</g:customCell>
								    </g:row>
								</g:Grid>
			    			</g:VerticalPanel>
			    		</g:CaptionPanel>
			    	</g:customCell>
				</g:row>
		    	<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Purpose:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcpReqPurposeTA" debugId="vpcpReqPurposeTA" />
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Notify Admins:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
			    		<g:CheckBox ui:field="vpcpReqNotifyAdminsCB" debugId="vpcpReqNotifyAdminsCB" title="Check if you want to notify admins when this VPCP is generated."/>
			    	</g:customCell>
				</g:row>
			</g:Grid>
			</g:VerticalPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
			<g:HorizontalPanel>
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="50%">
						<g:ScrollPanel>
							<g:VerticalPanel spacing="8" ui:field="adminVP" height="100%">
								<g:Label addStyleNames="{style.heading_label}">Add/remove Admin NetId(s):</g:Label>
								<g:HorizontalPanel ui:field="addAdminHP" spacing="16">
									<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
										<g:SuggestBox ui:field="directoryLookupSB" debugId="directoryLookupSB" addStyleNames="{style.field} {style.glowing-border}"/>
									</g:cell>
									<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
										<g:Button ui:field="addAdminButton" debugId="addAdminButton"
											addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
									</g:cell>
								</g:HorizontalPanel>
								<g:VerticalPanel spacing="8">
									<g:Label addStyleNames="{style.heading_label}">Administrators associated to this VPC:</g:Label>
									<g:FlexTable ui:field="adminTable" cellSpacing="3" cellPadding="3"/>
								</g:VerticalPanel>
							</g:VerticalPanel>
						</g:ScrollPanel>
				</g:cell>
				<!-- 
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="50%">
						<g:ScrollPanel>
							<g:VerticalPanel spacing="8" ui:field="netIdVP" height="100%">
								<g:Label addStyleNames="{style.heading_label}">Add/remove Admin NetId(s):</g:Label>
								<g:HorizontalPanel ui:field="addNetIdHP" spacing="16">
									<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
										<g:TextBox ui:field="addNetIdTF" debugId="addNetIdTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
									</g:cell>
									<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
										<g:Button ui:field="addNetIdButton" debugId="addNetIdButton"
											addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
									</g:cell>
								</g:HorizontalPanel>
								<g:VerticalPanel spacing="8">
									<g:Label addStyleNames="{style.heading_label}">Admin Net Ids associated to this VPC:</g:Label>
									<g:FlexTable ui:field="netIdTable" debugId="netIdTable" cellSpacing="3" cellPadding="3"/>
								</g:VerticalPanel>
							</g:VerticalPanel>
						</g:ScrollPanel>
				</g:cell>
				 -->
			</g:HorizontalPanel>
		</g:cell>
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 