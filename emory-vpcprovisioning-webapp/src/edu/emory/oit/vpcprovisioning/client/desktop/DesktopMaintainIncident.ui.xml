<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:ScrollPanel width="100%" height="99%">
	<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel spacing="8">
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Image url="images/ajax-loader.gif"/>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="generateTerminateAccountIncidentPanel">
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="terminateAccountLabel" addStyleNames="{style.mediumLabel}">Terminate an AWS Account</g:Label>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="tAcctOwnerApprovesLabel" addStyleNames="{style.label-left}">Please confirm the Account Owner (ACCOUNT_OWNER) is aware and approves the termination of this account:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:CheckBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="tAcctOwnerApprovesCB" debugId="tAcctOwnerApprovesCB"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="tAcctReadyLabel" addStyleNames="{style.label-left}">Please confirm all services and infrastructure in the account have been terminated:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:CheckBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="tAcctReadyCB" debugId="tAcctReadyCB"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="tAcctConfirmLabel" addStyleNames="{style.label-left}">Terminating an account is a permanent act.  When an account is deleted, it will no longer be accessible.  Are you sure you want to terminate this account?:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:CheckBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="tAcctConfirmCB" debugId="tAcctConfirmCB"/>
			    	</g:customCell>
		    	</g:row>
			</g:Grid>
		</g:cell>
		</g:HorizontalPanel>
		<g:VerticalPanel ui:field="generateCreateServiceAccountIncidentPanel">
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="createServiceAccountLabel" addStyleNames="{style.mediumLabel}">Create an AWS Service Account</g:Label>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="svcAcctDescriptionLabel" addStyleNames="{style.labelLeft}">Please provide a detailed description of how the Service Account/API Keys will be used:</g:Label>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="svcAcctDescriptionTA" debugId="svcAcctDescriptionTA" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="svcAcctIamPoliciesLabel" addStyleNames="{style.labelLeft}">Please list the desired IAM policy or list of services that will be used with the Service Account/API Keys:</g:Label>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="svcAcctIamPoliciesTA" debugId="svcAcctIamPoliciesTA" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="svcAcctAlternativeMethodsLabel" addStyleNames="{style.labelLeft}">Please explain why alternative methods cannot be used:</g:Label>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="svcAcctAlternativeMethodsTA" debugId="svcAcctAlternativeMethodsTA" />
			    	</g:customCell>
		    	</g:row>
		    </g:Grid>
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="ownerApprovesLabel" addStyleNames="{style.labelLeft}">Please confirm the Account Owner (ACCOUNT_OWNER) is aware and approves of this request:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:CheckBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="ownerApprovesCB" debugId="ownerApprovesCB"/>
			    	</g:customCell>
		    	</g:row>
			</g:Grid>
		</g:VerticalPanel>
		<g:HorizontalPanel ui:field="editIncidentPanel">
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
			<g:HorizontalPanel>
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
					<g:Grid cellSpacing="12">
						<g:row>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
									ui:field="okayButton" debugId="okayButton">Save</g:Button>
					    	</g:customCell>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
									ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
					    	</g:customCell>
						</g:row>
					</g:Grid>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 