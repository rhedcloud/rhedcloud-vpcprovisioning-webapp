<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:ScrollPanel width="100%" height="99%">
	<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel spacing="8">
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Image url="images/ajax-loader.gif"/>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="generateIncidentPanel">
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Label ui:field="incidentTypeLable" addStyleNames="{style.mediumLabel}">Generate an Incident</g:Label>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Short Description:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="shortDescriptionTB" debugId="shortNameTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Description:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
							ui:field="descriptionTA" debugId="descriptionTA" />
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Urgency:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox ui:field="urgencyTB" debugId="urgencyTB" 
							addStyleNames="{style.field} {style.glowing-border}" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Impact:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="impactTB" debugId="impactTB" enabled="false" />
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Business Service:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="businessServiceTB" debugId="businessServiceTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Category:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="categoryTB" debugId="categoryTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Sub-Category:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="subCategoryTB" debugId="categoryTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Record Type:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="recordTypeTB" debugId="recordTypeTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Contact Type:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="contactTypeTB" debugId="contactTypeTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Caller ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="callerIdTB" debugId="callerIdTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">CMDB Configuration Item:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="cmdbCiTB" debugId="cmdbCiTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Assignment Group:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="assignmentGroupTB" debugId="assignmentTypeTB" enabled="false"/>
			    	</g:customCell>
		    	</g:row>
			</g:Grid>
		</g:cell>
		</g:HorizontalPanel>
		<!-- 
		    <Incident>
			      <Number>INC12345678</Number>
			      <AssignmentGroup>LITS: Service Desk - Tier 1</AssignmentGroup>
			      <ShortDescription>Emory AWS Service - Account Termination Request</ShortDescription>
			      <Description>Please terinate AWS account 123456789012.</Description>
			      <Urgency>3 - Medium</Urgency>
			      <Priority>4 - Low</Priority>
			      <Impact>3 - Moderate/Limited</Impact>
			      <BusinessService>Application Management</BusinessService>
			      <Category>Access</Category>
			      <SubCategory>Remove</SubCategory>
			      <RecordType>Incident</RecordType>
			      <ContactType>Integration</ContactType>
			      <CallerId>PPETERS</CallerId>
			      <SystemId>some_internal_sys_id</SystemId>
			      <IncidentState>Awaiting Assignment</IncidentState>
		    </Incident>
		 -->
		<g:HorizontalPanel ui:field="editIncidentPanel">
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
			<g:HorizontalPanel>
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
					<g:Grid cellSpacing="12">
						<g:row>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
									ui:field="okayButton" debugId="okayButton">Save</g:Button>
					    	</g:customCell>
					    	<g:customCell>
								<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
									ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
					    	</g:customCell>
						</g:row>
					</g:Grid>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 