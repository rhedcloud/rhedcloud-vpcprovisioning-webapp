<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
		.browser {
			height: 200px;
			border: 1px solid #ccc;
		}
	</ui:style>
	
	<g:ScrollPanel width="100%" height="99%">
		<g:VerticalPanel spacing="8" width="100%">
			<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
				<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:VerticalPanel spacing="8">
						<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:Image url="images/ajax-loader.gif"/>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
						</g:cell>
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="50%">
				<g:Grid ui:field="maintenanceGrid" cellSpacing="8">
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.mediumLabel}">Maintain Service Test Plan</g:Label>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="addReqButton" debugId="addReqButton">Add Reqmt</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="removeReqButton" 
								debugId="removeReqButton"
								visible="false">Remove Reqmt</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="addTestButton" 
								debugId="addTestButton"
								visible="false">Add Test</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="removeTestButton" 
								debugId="removeTestButton"
								visible="false">Remove Test</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="addStepButton" 
								debugId="addTestButton"
								visible="false">Add Step</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="removeStepButton" 
								debugId="removeTestButton"
								visible="false">Remove Step</g:Button>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_MIDDLE" width="100%">
				<g:VerticalPanel spacing="8" width="90%">
					<c:CellBrowser 
						addStyleNames='{otherStyles.browser}'
						defaultColumnWidth="500" 
						width="100%"
						height="200px" 
						animationEnabled="true" 
						ui:field="cellBrowser" 
						title="Existing Test Requirements"/>
					<g:HTML addStyleNames="{style.statusLabel}">View/maintain the test requirement, 
					test and step information below.  Click the 
					Save button to save each item and the Security Assessment will also be saved.</g:HTML>
				</g:VerticalPanel>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_MIDDLE" width="100%">
				<g:VerticalPanel ui:field="testPlanMaintenancePanel" addStyleNames="{style.statusPanel}" width="90%">
					<!-- Requirement info:  sequenceNumber, Description -->
					<g:VerticalPanel ui:field="requirementPanel" 
						visible="false"
						width="100%">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Grid cellSpacing="8">
								<g:row>
									<g:customCell>
										<g:Label addStyleNames="{style.mediumLabel}">Maintain Service Test Requirement</g:Label>
									</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Sequence Number:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="reqSequenceNumberTB" debugId="reqSequenceNumberTB" />
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Description:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
											ui:field="reqDescriptionTA" debugId="reqDescriptionTA" />
							    	</g:customCell>
						    	</g:row>
								<g:row>
									<g:customCell>
										<g:Button
											addStyleNames="{style.glowing-border} {style.normalButton}"
											ui:field="saveReqButton" debugId="saveReqButton">Save</g:Button>
									</g:customCell>
								</g:row>
						    </g:Grid>
						 </g:cell>
					</g:VerticalPanel>
					<!-- Test info: sequenceNumber, Description, expected result (listbox) -->
					<g:VerticalPanel ui:field="testPanel" 
						visible="false"
						width="100%">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Grid cellSpacing="8">
								<g:row>
									<g:customCell>
										<g:Label addStyleNames="{style.mediumLabel}">Maintain Service Test</g:Label>
									</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Requirement:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:Label ui:field="testRequirementForTestLabel" addStyleNames="{style.field}"/>
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Sequence Number:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="testSequenceNumberTB" debugId="testSequenceNumberTB" />
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Description:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
											ui:field="testDescriptionTA" debugId="testDescriptionTA" />
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Expected Result:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="testExpectedResultLB" debugId="testExpectedResultLB" />
							    	</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Button
											addStyleNames="{style.glowing-border} {style.normalButton}"
											ui:field="saveTestButton" debugId="saveTestButton">Save</g:Button>
									</g:customCell>
								</g:row>
						    </g:Grid>
						 </g:cell>
					</g:VerticalPanel>
					<!-- Test Step info: sequenceNumber, Description -->
					<g:VerticalPanel ui:field="testStepPanel" 
						visible="false"
						width="100%">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Grid cellSpacing="8">
								<g:row>
									<g:customCell>
										<g:Label addStyleNames="{style.mediumLabel}">Maintain Service Test Step</g:Label>
									</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Requirement:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:Label ui:field="testRequirementForStepLabel" addStyleNames="{style.field}"/>
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Test:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:Label ui:field="testForStepLabel" addStyleNames="{style.field}"/>
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Sequence Number:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="stepSequenceNumberTB" debugId="testSequenceNumberTB" />
							    	</g:customCell>
						    	</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Description:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextArea addStyleNames="{style.longField} {style.glowing-border}"
											ui:field="stepDescriptionTA" debugId="stepDescriptionTA" />
							    	</g:customCell>
						    	</g:row>
								<g:row>
									<g:customCell>
										<g:Button
											addStyleNames="{style.glowing-border} {style.normalButton}"
											ui:field="saveStepButton" debugId="saveStepButton">Save</g:Button>
									</g:customCell>
								</g:row>
						    </g:Grid>
						 </g:cell>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:cell>
			<!-- 
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_MIDDLE" width="100%">
				<g:Grid cellSpacing="12">
					<g:row>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="okayButton" debugId="okayButton">Save</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:cell>
			 -->
		</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 