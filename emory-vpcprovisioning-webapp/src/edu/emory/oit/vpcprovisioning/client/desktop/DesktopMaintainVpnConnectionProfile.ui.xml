<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Address:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcTB" debugId="vpcTB" />
			    	</g:customCell>
				</g:row>
				<!-- 
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPN Connection Profile ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="profileIdTB" debugId="profileIdTB" />
			    	</g:customCell>
				</g:row>
				 -->
			</g:Grid>
		</g:cell>
    	<!-- TODO: give users ability to keep adding more on this same page -->
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="50%">
			<g:ScrollPanel>
				<g:VerticalPanel spacing="8" ui:field="tunnelsVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Add Tunnel Profiles:</g:Label>
					<g:DecoratorPanel>
					<g:HorizontalPanel ui:field="addTunnelHP" spacing="16">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Grid cellSpacing="12">
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Tunnel Description:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="tunnelDescTB" debugId="tunnelDescTB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Crypto Keyring:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="cryptoKeyringTB" debugId="cryptoKeyringTB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">ISAKAMP Profile:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="isakampProfileTB" debugId="isakampProfileTB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">IPSEC Profile:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="ipsecProfileTB" debugId="ipsecProfileTB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">IPSEC Transform Set:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="ipsecTransformSetTB" debugId="ipsecTransformSetTB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">Customer Gagteway IP:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="customerGatewayIpTB" debugId="customerGatewayIpTB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">VPN Inside CIDR 1:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="vpnInsideCidr1TB" debugId="vpnInsideCidr1TB" />
							    	</g:customCell>
								</g:row>
								<g:row>
							    	<g:customCell>
										<g:Label addStyleNames="{style.label}">VPN Inside CIDR 2:</g:Label>
							    	</g:customCell>
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="vpnInsideCidr2TB" debugId="vpnInsideCidr2TB" />
							    	</g:customCell>
								</g:row>
							</g:Grid>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Button ui:field="addTunnelButton" debugId="addTunnelButton"
								addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
						</g:cell>
					</g:HorizontalPanel>
					</g:DecoratorPanel>
					<g:VerticalPanel spacing="8">
						<g:Label addStyleNames="{style.mediumLabel}">Tunnels you want associated to this VPN Connection Profile:</g:Label>
						<g:FlexTable ui:field="tunnelTable" debugId="tunnelTable" cellSpacing="3" cellPadding="3"/>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 