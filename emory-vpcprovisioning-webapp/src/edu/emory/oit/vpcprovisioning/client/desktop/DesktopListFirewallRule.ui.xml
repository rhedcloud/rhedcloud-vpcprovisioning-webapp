<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:ScrollPanel width="100%" height="99%">
	<g:VerticalPanel width="100%" spacing="15">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel spacing="8">
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Image url="images/ajax-loader.gif"/>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
		<g:VerticalPanel width="100%" height="100%">
			<g:TabLayoutPanel 
				barHeight="2" 
				barUnit="EM" 
				width="100%"
				height="600px" 
				animationDuration="500" 
				animationVertical="false" 
				ui:field="firewallRuleTabPanel"
				addStyleNames="gwt-TabLayoutPanel">

				<g:tab>
					<g:header>Existing Firewall Rules</g:header>
					<g:VerticalPanel ui:field="firewallRuleTabContainer" width="100%" height="100%" spacing="20">
						<g:HTML addStyleNames="{style.mediumLabel}">FirewallRule List</g:HTML>
						<g:HTML addStyleNames="{style.body}">Below is a list of existing AWS FirewallRules for VPCs you are associated with.<br/><br/></g:HTML>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
							<g:Grid cellSpacing="8">
								<g:row>
									<g:customCell>
										<g:Button ui:field="firewallRuleActionsButton" debugId="firewallRuleActionsButton" text="Actions" addStyleNames="{style.glowing-border} {style.normalButton}" title="Actions you can perform on a selected item"/>
									</g:customCell>
									<!-- TEMPORARY -->
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="fwFilterTB" debugId="filterTB"/>
							    	</g:customCell>
									<g:customCell>
										<g:Button ui:field="fwFilterButton" debugId="fwFilterButton" text="Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter"/>
									</g:customCell>
									<g:customCell>
										<g:Button ui:field="clearfwFilterButton" debugId="clearFilterButton" text="Clear Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Clear filter"/>
									</g:customCell>
							    	<!-- END TEMPORARY -->
									<g:customCell>
										<g:PushButton ui:field="refreshButton" debugId="refreshButton" text="Refresh" 
											addStyleNames="{style.refreshButton}"
											title="Refresh table content"/>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
						<g:VerticalPanel ui:field="firewallRuleListPanel" width="100%">
							<g:Grid>
								<g:row>
									<g:customCell>
										<c:CellTable width="100%" ui:field="firewallRuleListTable"  title="Existing FirewallRules"/>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<c:SimplePager ui:field="firewallRuleListPager" debugId="firewallRuleListPager" location="CENTER"/>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
						</g:cell>
					</g:VerticalPanel>
				</g:tab>
				<g:tab>
					<g:header>Request Firewall Rules</g:header>
					<g:VerticalPanel ui:field="requestsTabContainer" width="100%" height="100%" spacing="20">
						<g:HTML addStyleNames="{style.mediumLabel}">Firewall Exception Request List</g:HTML>
						<g:HTML addStyleNames="{style.body}">Below is a list of existing AWS Firewall Exception Requests that you have made and their statuses.<br/><br/></g:HTML>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
							<g:Grid cellSpacing="8">
								<g:row>
									<g:customCell>
										<g:Button ui:field="firewallExceptionRequestButton" debugId="firewallExceptionRequestButton" text="Request Firewall Exception" addStyleNames="{style.glowing-border} {style.actionButton}"/>
									</g:customCell>
									<g:customCell>
										<g:Button ui:field="firewallExceptionRequestActionsButton" debugId="firewallExceptionRequestActionsButton" text="Actions" addStyleNames="{style.glowing-border} {style.normalButton}" title="Actions you can perform on a selected item"/>
									</g:customCell>
									<!-- TEMPORARY -->
							    	<g:customCell>
										<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
											ui:field="fwerFilterTB" debugId="fwerFilterTB"/>
							    	</g:customCell>
									<g:customCell>
										<g:Button ui:field="fwerFilterButton" debugId="fwerFilterButton" text="Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter"/>
									</g:customCell>
									<g:customCell>
										<g:Button ui:field="clearfwerFilterButton" debugId="clearfwerFilterButton" text="Clear Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Clear filter"/>
									</g:customCell>
							    	<!-- END TEMPORARY -->
								</g:row>
							</g:Grid>
						</g:cell>
						<g:VerticalPanel ui:field="firewallExceptionRequestListPanel" width="100%">
							<g:Grid>
								<g:row>
									<g:customCell>
										<c:CellTable width="100%" ui:field="firewallExceptionRequestListTable"  title="Existing Firewall rule requests"/>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<c:SimplePager ui:field="firewallExceptionRequestListPager" debugId="firewallExceptionRequestListPager" location="CENTER"/>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
					</g:VerticalPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:VerticalPanel>
		</g:cell>
	</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 