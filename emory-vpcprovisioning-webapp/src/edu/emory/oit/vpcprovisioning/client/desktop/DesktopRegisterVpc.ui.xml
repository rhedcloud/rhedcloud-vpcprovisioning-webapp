<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel spacing="12">
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
			
			<g:Grid ui:field="registerVpcGrid" cellSpacing="8">
			<!-- NEEDS these (when registering an existing VPC -> Vpc.Create):
				<!ELEMENT VirtualPrivateCloud (
					AccountId, 
					VpcId, 
					Type, 
					CustomerAdminNetId+, 
					CreateUser (view only), 
					CreateDatetime (view only), 
					LastUpdateUser? (view only), 
					LastUpdateDatetime? (view only))>
			 -->
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Select Account:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="accountLB" debugId="accountLB" />
			    	</g:customCell>
			    	<g:customCell>
			    		<g:CaptionPanel ui:field="accountCP" captionHTML="Account Info">
			    		</g:CaptionPanel>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcIdTB" debugId="vpcIdTB" />
			    	</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Region:</g:Label>
					</g:customCell>
					<g:customCell>
						<g:ListBox
							addStyleNames="{style.field} {style.glowing-border}"
							ui:field="regionLB" debugId="regionLB" />
					</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">VPC Type:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpcTypeLB" debugId="vpcTypeLB" />
			    	</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label addStyleNames="{style.label}">CIDR:</g:Label>
					</g:customCell>
					<g:customCell>
						<g:TextBox
							addStyleNames="{style.field} {style.glowing-border}"
							ui:field="cidrTB" debugId="cidrTB" title="In the form 'ip address/bits'"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label addStyleNames="{style.label}">VPN Profile ID:</g:Label>
					</g:customCell>
					<g:customCell>
						<g:TextBox
							addStyleNames="{style.field} {style.glowing-border}"
							ui:field="vpnProfileIdTB" debugId="vpnProfileIdTB" title="VPN Profile ID"/>
					</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Purpose:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.field} {style.glowing-border}"
							ui:field="purposeTA" debugId="purposeTA" 
							title="The purpose of this VPC."/>
			    	</g:customCell>
		    	</g:row>
			</g:Grid>
		</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_TOP">
				<g:VerticalPanel addStyleNames="{style.statusPanel}" spacing="8" ui:field="propertiesVP" height="100%">
					<g:Label addStyleNames="{style.mediumLabel}">Add/Update/Remove Properties:</g:Label>
					<g:HorizontalPanel ui:field="addPropertyHP" spacing="16">
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:TextBox ui:field="propertyKeyTF" debugId="propertyKeyTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:TextBox ui:field="propertyValueTF" debugId="propertyValueTF" addStyleNames="{style.field} {style.glowing-border}"></g:TextBox>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
							<g:Button ui:field="addPropertyButton" debugId="addPropertyButton"
								addStyleNames="{style.glowing-border} {style.actionButton}">Add</g:Button>
						</g:cell>
					</g:HorizontalPanel>
					<g:VerticalPanel spacing="8">
						<g:Label addStyleNames="{style.mediumLabel}">Properties associated to this VPC:</g:Label>
						<g:FlexTable ui:field="propertiesTable" debugId="propertiesTable" cellSpacing="3" cellPadding="3"/>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<!-- TODO: VPC Properties -->
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="8">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Save</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 