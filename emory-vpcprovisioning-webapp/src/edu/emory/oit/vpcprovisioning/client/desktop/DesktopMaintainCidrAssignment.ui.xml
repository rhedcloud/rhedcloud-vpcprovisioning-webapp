<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:HorizontalPanel spacing="8">
					<g:Label text="Please wait..."/>
					<g:Image url="images/ajax-loader.gif"/>
				</g:HorizontalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Owner ID:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
							ui:field="ownerIdTB" enabled="false"/>
			    	</g:customCell>
			    </g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Purpose:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.field} {style.glowing-border}"
							ui:field="purposeTB" />
			    	</g:customCell>
			    </g:row>
				<g:row>
			    	<g:customCell>
						<g:Label addStyleNames="{style.label}">Description:</g:Label>
			    	</g:customCell>
			    	<g:customCell>
						<g:TextArea addStyleNames="{style.field} {style.glowing-border}"
							ui:field="descriptionTB" />
			    	</g:customCell>
			    </g:row>
			</g:Grid>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
			<g:HorizontalPanel>
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="30%">
						<g:ScrollPanel>
							<g:VerticalPanel spacing="8" ui:field="accountsVP" height="100%">
								<g:Label addStyleNames="{style.heading_label}">Step 1:  Select an Account</g:Label>
								<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
									<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
										ui:field="accountLB" />
								</g:cell>
							</g:VerticalPanel>
						</g:ScrollPanel>
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="30%">
						<g:ScrollPanel>
							<g:VerticalPanel spacing="8" ui:field="vpcsVP" height="100%">
								<g:Label addStyleNames="{style.heading_label}">Step 2:  Select a VPC</g:Label>
								<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
									<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
										ui:field="vpcLB" />
								</g:cell>
							</g:VerticalPanel>
						</g:ScrollPanel>
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="30%">
						<g:ScrollPanel>
							<g:VerticalPanel spacing="8" ui:field="cidrVP" height="100%">
								<g:Label addStyleNames="{style.heading_label}">Step 3:  Select a CIDR</g:Label>
								<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
									<g:ListBox addStyleNames="{style.field} {style.glowing-border}"
										ui:field="cidrLB" />
								</g:cell>
							</g:VerticalPanel>
						</g:ScrollPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.saveButton}"
							ui:field="okayButton">Assign</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.cancelButton}"
							ui:field="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 