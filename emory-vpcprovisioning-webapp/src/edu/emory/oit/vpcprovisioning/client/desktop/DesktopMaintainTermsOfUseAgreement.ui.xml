<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:HTML ui:field="termsOfUseHeader" addStyleNames="{style.mediumLabel}">Rules for Behavior</g:HTML>
		<g:Label ui:field="effectiveDateLabel" addStyleNames="{style.labelLeft}">Put into Effect:</g:Label>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:ScrollPanel width="100%" height="99%">
				<g:VerticalPanel spacing="8" width="100%">
    				<g:HTML width="800px" height="750px" ui:field="termsOfUseHTML"/>
    			</g:VerticalPanel>
    		</g:ScrollPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:CheckBox ui:field="agreeToTermsCB" 
				title="Agree to rules">By checking this box, you agree to the Emory Rules for Behavior as stated above.</g:CheckBox>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Button enabled="false" addStyleNames="{style.glowing-border} {style.normalButton}"
				ui:field="okayButton" debugId="okayButton">Okay</g:Button>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 