<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel spacing="8" width="100%">
		<g:HTML ui:field="termsOfUseHeader" addStyleNames="{style.mediumLabel}">Rules for Behavior</g:HTML>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:ScrollPanel width="100%" height="99%">
    			<g:HTML ui:field="termsOfUseHTML" addStyleNames="{style.body}"/>
    		</g:ScrollPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:CheckBox ui:field="agreeToTermsCB" 
							title="Agree to rules">By checking this box, you agree to the Emory Rules for Behavior</g:CheckBox>
			    	</g:customCell>
				</g:row>
				<g:row>
			    	<g:customCell>
						<g:Button enabled="false" addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton" debugId="okayButton">Okay</g:Button>
			    	</g:customCell>
			    	<!-- 
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
			    	</g:customCell>
			    	 -->
				</g:row>
			</g:Grid>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 