								</g:VerticalPanel>
							</g:VerticalPanel>
						</g:ScrollPanel>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		 -->
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="12">
				<g:row>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="okayButton">Okay</g:Button>
			    	</g:customCell>
			    	<g:customCell>
						<g:Button addStyleNames="{style.glowing-border} {style.normalButton}"
							ui:field="cancelButton">Cancel</g:Button>
			    	</g:customCell>
				</g:row>
			</g:Grid>
		</g:cell>
		<g:VerticalPanel width="100%" height="100%">
			<g:TabLayoutPanel 
				barHeight="2" 
				barUnit="EM" 
				width="100%"
				height="600px" 
				animationDuration="500" 
				animationVertical="false" 
				ui:field="vpcTabPanel"
				addStyleNames="gwt-TabLayoutPanel">

				<g:tab>
					<g:header>Firewall Rules</g:header>
					<g:DeckLayoutPanel ui:field="firewallContainer" width="100%" height="100%"/>
				</g:tab>
				<g:tab>
					<g:header>Elastic IPs</g:header>
					<g:DeckLayoutPanel ui:field="elasticIpAssignmentContainer" width="100%" height="100%"/>
				</g:tab>
			</g:TabLayoutPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 