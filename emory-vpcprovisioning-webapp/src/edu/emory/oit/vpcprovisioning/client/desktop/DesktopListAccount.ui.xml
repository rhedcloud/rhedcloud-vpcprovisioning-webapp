<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>
	<g:VerticalPanel width="100%" spacing="20">
		<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:HorizontalPanel spacing="8">
					<g:Image url="images/ajax-loader.gif"/>
				</g:HorizontalPanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:HTML addStyleNames="{style.introHeading}">Account List</g:HTML>
		<g:HTML addStyleNames="{style.body}">Below is a list of existing AWS Accounts that you can view or edit.<br/><br/>
		These reside in the database associated to the Emory AWS ESB Service.  
		The Emory AWS Service is authoritatative for 
		AWS Account and VirtualPrivateCloud objects and allows applications like this one 
		to query, create, update and delete those objects.<br/><br/>
		Click the 'Add' button to go to the Account maintenance page where you can create an AWS Account.</g:HTML>
		<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
			<g:Grid cellSpacing="8">
				<g:row>
					<g:customCell>
						<g:Button ui:field="addAccountButton" debugId="addAccountButton" text="Add Account" addStyleNames="{style.glowing-border} {style.actionButton}"/>
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="actionsButton" debugId="actionsButton" text="Actions" addStyleNames="{style.glowing-border} {style.normalButton}" title="Actions you can perform on a selected item"/>
					</g:customCell>
					<!-- TEMPORARY -->
				    	<g:customCell>
							<g:TextBox addStyleNames="{style.field} {style.glowing-border}"
								ui:field="accountIdTB" debugId="accountIdTB"/>
				    	</g:customCell>
					<g:customCell>
						<g:Button ui:field="filterButton" debugId="filterButton" text="Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter by account id"/>
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="clearFilterButton" debugId="clearFilterButton" text="Clear Filter" addStyleNames="{style.glowing-border} {style.normalButton}" title="Filter by account id"/>
					</g:customCell>
				    	<!-- END TEMPORARY -->
				</g:row>
			</g:Grid>
		</g:cell>
		<g:VerticalPanel ui:field="accountListPanel" width="100%">
			<g:Grid>
				<g:row>
					<g:customCell>
						<c:CellTable width="100%" ui:field="accountListTable"  title="Existing Accounts"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<c:SimplePager ui:field="accountListPager" debugId="accountListPager" location="CENTER"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 