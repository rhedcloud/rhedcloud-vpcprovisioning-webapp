<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="DesktopStyles.css" />
	<ui:style field="otherStyles">
	</ui:style>

	<g:ScrollPanel width="100%" height="99%">
		<g:VerticalPanel spacing="8" width="100%">
			<g:HorizontalPanel ui:field="pleaseWaitPanel" width="100%" visible="false">
				<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:VerticalPanel spacing="8">
						<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:Image url="images/ajax-loader.gif"/>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:HTML ui:field="pleaseWaitHTML" addStyleNames="{style.body}"/>
						</g:cell>
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="50%">
				<g:Grid ui:field="maintainAssessmentGrid" cellSpacing="8">
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.mediumLabel}">Maintain Security Risk</g:Label>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Service:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox 
								addStyleNames="{style.field} {style.glowing-border}" 
								ui:field="serviceNameTB" debugId="serviceNameTB" 
								enabled="false" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Sequence Number:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox 
								addStyleNames="{style.field} {style.glowing-border}" 
								ui:field="sequenceNumberTB" debugId="sequenceNumberTB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Risk Name:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox 
								addStyleNames="{style.field} {style.glowing-border}" 
								ui:field="riskNameTB" debugId="riskNameTB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Risk Level:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:ListBox
								addStyleNames="{style.field} {style.glowing-border}"
								ui:field="riskLevelLB" debugId="riskLevelLB" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{style.label}">Description:</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextArea 
								addStyleNames="{style.longField} {style.glowing-border}" 
								ui:field="riskDescriptionTA" debugId="riskDescriptionTA" />
						</g:customCell>
					</g:row>
					<g:row>
				    	<g:customCell>
							<g:Label addStyleNames="{style.label}">Assessor ID:</g:Label>
				    	</g:customCell>
				    	<g:customCell>
							<g:SuggestBox ui:field="assessorLookupSB" debugId="assessorSB" 
								addStyleNames="{style.field} {style.glowing-border}"/>
					    </g:customCell>
			    	</g:row>
					<g:row>
				    	<g:customCell>
							<g:Label addStyleNames="{style.label}">Assessment Date:</g:Label>
				    	</g:customCell>
				    	<g:customCell>
							<d:DateBox addStyleNames="{style.field} {style.glowing-border}"
								ui:field="assessmentDB"  debugId="assessmentDB"/>
					    </g:customCell>
			    	</g:row>
				</g:Grid>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT"
				verticalAlignment="ALIGN_MIDDLE" width="100%">
				<g:Grid cellSpacing="12">
					<g:row>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="okayButton" debugId="okayButton">Save</g:Button>
						</g:customCell>
						<g:customCell>
							<g:Button
								addStyleNames="{style.glowing-border} {style.normalButton}"
								ui:field="cancelButton" debugId="cancelButton">Cancel</g:Button>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="45%">
				<g:VerticalPanel addStyleNames="{style.statusLabel}" width="100%">
					<g:HTML ui:field="counterMeasuresHeader" addStyleNames="{style.mediumLabel}">Counter Measures</g:HTML>
					<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%">
						<g:Grid cellSpacing="12">
							<g:row>
								<g:customCell>
									<g:Button ui:field="createButton" debugId="createButton" text="Add Countermeasure" addStyleNames="{style.glowing-border} {style.actionButton}" title="Create a new countermeasure for this risk."/>
								</g:customCell>
								<g:customCell>
									<g:Button ui:field="actionsButton" debugId="actionsButton" text="Actions" addStyleNames="{style.glowing-border} {style.normalButton}" title="Actions you can perform on a selected item"/>
								</g:customCell>
							</g:row>
						</g:Grid>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" width="100%">
						<g:VerticalPanel ui:field="listPanel" width="100%">
							<g:Grid>
								<g:row>
									<g:customCell>
										<c:CellTable width="100%" ui:field="listTable" debugId="listTable" title="Countermeasures"/>
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<c:SimplePager ui:field="listPager" debugId="listPager"/>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:VerticalPanel>
					</g:cell>
				</g:VerticalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 